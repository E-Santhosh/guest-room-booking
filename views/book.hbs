<head>
    <link rel="stylesheet" href="/public/css/table.css">
</head>

<h3>Booking Details</h3>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
<form method="" action="" autocomplete="off">
<div class=""form-group>
    <div class="form-group">
        <label for="room_name">Name</label>
        <input type="text" name="name" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" required>
    </div>
    <div class="form-group">
        <label for="number">Number</label>
        <input type="text" name="number" required>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="address" required>
    </div>
    <div class="form-group">
        <label for="indate">In Date</label>
        <input type="date" name="indate" required>
    </div>
    <div class="form-group">
        <label for="outdate">Out Date</label>
        <input type="date" name="outdate" required>
    </div>
    <div class="form-group">
        <label for="duration">Booking Duration(days)</label>
        <input type="number" name="duration" required>
    </div>
    <div class="form-group">
        <label for="persons">Persons</label>
        <input type="number" name="persons" required>
    </div>
    
     <div class="form-group">
        <button type="submit" class="button">Book Now</button>
        <button class="button"><a href="table">View all</a></button>

    </div>
    </div>
</div>

</form>